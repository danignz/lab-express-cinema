<div id="moviesheader">
  <h1>Ironhack Cinema</h1>
  <h2>Click on the movie to check showtimes!</h2>
</div>

<div id="moviesbox">
  {{#each movies}}
    <div class="movie-card">
      <img src="{{this.image}}" alt="{{this.title}}" />
      <p>{{this.title}}</p>
      <a href="/movies/{{this._id}}">See more</a>
    </div>
  {{/each}}
</div>