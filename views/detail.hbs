<div id="moviedetail">
  <img src="{{this.image}}" alt="{{this.title}}" />
  <div id="moviedetailcard">
    <a href="/movies/">Go back</a>
    <h1>{{this.title}}</h1>
    <h2>Director: {{this.director}}</h2>
    <h3>Stars</h3>
    <ul>
      {{#each this.stars}}
        <li>{{this}}</li>
      {{/each}}
    </ul>
    <p>{{this.description}}</p>
    {{#each this.showtimes}}
      <p id="horizontallist">{{this}} | </p>
    {{/each}}
  </div>
</div>